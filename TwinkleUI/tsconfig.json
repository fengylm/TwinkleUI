{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "exclude": [
    "bin",
    "node_modules"
  ],
   "typeRoots": [
    "node_modules/@types"
  ]
}
